<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/the_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.iswara.ui.beginning.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerOnBoardingFragment"
            app:destination="@id/viewPagerOnBoardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerOnBoardingFragment"
        android:name="com.example.iswara.ui.beginning.onboarding.ViewPagerOnBoardingFragment"
        android:label="fragment_view_pager_on_boarding"
        tools:layout="@layout/fragment_view_pager_on_boarding" >
        <action
            android:id="@+id/action_viewPagerOnBoardingFragment_to_loginFragment2"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/viewPagerOnBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.iswara.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_berandaActivity"
            app:destination="@id/berandaActivity" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.iswara.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <activity
        android:id="@+id/berandaActivity"
        android:name="com.example.iswara.ui.beranda.BerandaActivity"
        android:label="activity_beranda"
        tools:layout="@layout/activity_beranda" />
</navigation>