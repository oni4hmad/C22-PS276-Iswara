<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.beginning.onboarding.SecondOnBoardingFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_second_secondpage"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_ilustrasi_konsultasi"
        android:src="@drawable/konsultasi_illustrasi"
        android:layout_marginBottom="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_second_secondpage"
        android:layout_width="400dp"
        android:layout_height="400dp"/>



    <TextView
        android:id="@+id/tv_second_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bicarakan\n Permasalahanmu\n dengan Pakar"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_second_secondpage"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/tv_next_second_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Selanjutnya"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>