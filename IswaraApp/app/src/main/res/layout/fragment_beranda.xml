<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.beranda.BerandaFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_half_horizontal"
        app:layout_constraintGuide_percent="0.22"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_imagehelper"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_outer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_half_horizontal"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ilustration_ara"
                android:src="@drawable/ara_mvp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="-20dp"
                android:layout_width="wrap_content"
                android:layout_height="180dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottom_app_bar"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:fabCradleMargin="12dp"
                app:fabCradleRoundedCornerRadius="36dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_nav_view_menu"
                    app:menu="@menu/bottom_nav_menu"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_chatbot_ara"
                android:src="@drawable/araface"
                app:layout_anchor="@id/bottom_app_bar"
                android:backgroundTint="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </com.google.android.material.card.MaterialCardView>



    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_imagehelper"
        android:src="@drawable/beachbgcard"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="beach image" />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_imagehelper"
        android:src="@drawable/orange_gradient"
        android:scaleType="fitXY"
        android:id="@+id/src_gradient_orange"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_user_profile"
        app:cardElevation="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_imagehelper"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_photo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/holder_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/tv_user_name"
               app:layout_constraintBottom_toTopOf="@id/tv_ask_greet_first"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toEndOf="@id/iv_user_photo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp"
                android:text="@string/hai_ambar_text_holder"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="16sp"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_ask_greet_first"
                app:layout_constraintBottom_toTopOf="@id/tv_ask_greet_second"
                app:layout_constraintStart_toStartOf="@id/tv_user_name"
                android:text="Ada kejadian apa hari ini?"
                android:textSize="10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_ask_greet_second"
                app:layout_constraintStart_toStartOf="@id/tv_user_name"
                app:layout_constraintBottom_toBottomOf="@id/iv_user_photo"
                android:text="Mau ceritakan hari mu? 🙋🏻"
                android:textSize="10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/go_tell_story"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:layout_constraintTop_toTopOf="@id/tv_ask_greet_first"
                app:layout_constraintBottom_toBottomOf="@id/tv_ask_greet_second"
                app:layout_constraintEnd_toEndOf="@id/tv_user_name"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <View
                android:id="@+id/line_separator"
                app:layout_constraintTop_toBottomOf="@id/iv_user_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/navy"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_quote"
                android:text="@string/example_quote_chars"
                app:layout_constraintStart_toStartOf="@id/iv_user_photo"
                app:layout_constraintEnd_toEndOf="@id/tv_user_name"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/line_separator"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_author"
                app:layout_constraintTop_toBottomOf="@id/tv_quote"
                app:layout_constraintEnd_toEndOf="@id/tv_quote"
                app:layout_constraintStart_toStartOf="@id/tv_quote"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="2dp"
                android:text="@string/example_author"
                android:textSize="12sp"
                android:textStyle="italic|bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_helper_btn"
        app:layout_constraintGuide_percent="0.72"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linlayout_button_feature"
        app:layout_constraintTop_toBottomOf="@id/gl_imagehelper"
        app:layout_constraintStart_toStartOf="@id/cv_user_profile"
        app:layout_constraintBottom_toTopOf="@id/gl_helper_btn"
        android:orientation="vertical"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="@id/cv_user_profile"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_konsultasi"
            app:cardCornerRadius="16dp"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_bg_btn_konsultasi"
                    android:src="@drawable/talk_konsultasi"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/src_gradient_blue"
                    app:layout_constraintEnd_toEndOf="@id/iv_bg_btn_konsultasi"
                    app:layout_constraintStart_toStartOf="@id/iv_bg_btn_konsultasi"
                    app:layout_constraintTop_toTopOf="@id/iv_bg_btn_konsultasi"
                    app:layout_constraintBottom_toBottomOf="@id/iv_bg_btn_konsultasi"
                    android:src="@drawable/blue_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_ic_konsultasi"
                    android:src="@drawable/ic_round_mark_chat_unread_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="36dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <TextView
                    android:textStyle="bold"
                    android:text="Konsultasi"
                    app:layout_constraintStart_toEndOf="@id/iv_ic_konsultasi"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ruangan"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="16dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_bg_btn_ruangan"
                    android:src="@drawable/texting_bicara"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/src_gradient_redishblue"
                    app:layout_constraintEnd_toEndOf="@id/iv_bg_btn_ruangan"
                    app:layout_constraintStart_toStartOf="@id/iv_bg_btn_ruangan"
                    app:layout_constraintTop_toTopOf="@id/iv_bg_btn_ruangan"
                    app:layout_constraintBottom_toBottomOf="@id/iv_bg_btn_ruangan"
                    android:src="@drawable/redishblue_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_ic_ruangan"
                    android:src="@drawable/ic_baseline_layers_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="36dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <TextView
                    android:textStyle="bold"
                    android:text="Ruang Cerita"
                    app:layout_constraintStart_toEndOf="@id/iv_ic_ruangan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_darurat"
            app:cardCornerRadius="16dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_bg_btn_darurat"
                    android:src="@drawable/darurat"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/src_gradient_red"
                    app:layout_constraintEnd_toEndOf="@id/iv_bg_btn_darurat"
                    app:layout_constraintStart_toStartOf="@id/iv_bg_btn_darurat"
                    app:layout_constraintTop_toTopOf="@id/iv_bg_btn_darurat"
                    app:layout_constraintBottom_toBottomOf="@id/iv_bg_btn_darurat"
                    android:src="@drawable/red_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_ic_darurat"
                    android:src="@drawable/ic_round_warning_amber_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="36dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <TextView
                    android:textStyle="bold"
                    android:text="Darurat"
                    app:layout_constraintStart_toEndOf="@id/iv_ic_darurat"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>