<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.beginning.onboarding.ThirdOnBoardingFragment">

    <ImageView
        android:id="@+id/iv_ilustrasi_cerita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_third_screen"
        android:src="@drawable/bagikancerita_illustrasi"
        android:layout_width="380dp"
        android:layout_height="400dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_third_screen"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_third_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_third_screen"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Bagikan ceritamu\n pada dunia"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_next_third_fragment"
        android:text="Finish"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>